<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#17074f"
    android:layout_height="match_parent"
    tools:context=".COntrolActivityy">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:shadowColor="@color/black"
        android:text="WELCOME TO THE AUTOMATIC LIQUID MIXER"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_welcome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-black"
        android:shadowColor="@color/black"
        android:text="Enjoy your drink :)"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_receipt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome"
        app:layout_constraintVertical_bias="0.566" />

    <Button
        android:id="@+id/btn_receipt1"
        android:layout_width="141dp"
        android:layout_height="71dp"
        android:layout_marginTop="124dp"
        android:textColor="#000000"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:text="Cola - Fanta MIX"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome" />

    <Button
        android:id="@+id/btn_receipt3"
        android:layout_width="141dp"
        android:layout_height="71dp"
        android:layout_marginBottom="204dp"
        android:textColor="#000000"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:text="Sprite-Cola MIX"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_disconnect"
        android:layout_width="141dp"
        android:layout_height="71dp"
        android:layout_marginBottom="92dp"
        android:textColor="#000000"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:text="DISCONNECT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_receipt2"
        android:layout_width="141dp"
        android:layout_height="71dp"
        android:layout_marginStart="132dp"
        android:text="Fanta - Sprite MIX"
        android:textColor="#000000"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btn_receipt3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_receipt1"
        app:layout_constraintVertical_bias="0.529" />

</androidx.constraintlayout.widget.ConstraintLayout>